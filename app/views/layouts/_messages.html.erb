<div class="container">
  <% flash.each do |name, msg| %>
      <div class="alert alert-dismissible fade show <%= name=='notice' ? 'alert-success' : 'alert-danger' %>" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% end %>
</div>